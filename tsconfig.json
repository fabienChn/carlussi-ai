{
  "compilerOptions": {
    /* Language and Environment */
    "target": "ES2022",
    "module": "CommonJS", 
    "moduleResolution": "node",

    /* Modules */
    "esModuleInterop": true,

    /* Interop Constraints */
    "forceConsistentCasingInFileNames": true,

    /* Type Checking */
    "strict": true,

    /* Completeness */
    "skipLibCheck": true,

    /* Output and Input */
    "outDir": "./dist",
    "rootDir": "./src",

    /* Additional Configuration */
    "declaration": false,
    "removeComments": true
  }
}

